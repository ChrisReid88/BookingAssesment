<Window x:Class="Assessment2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="304*"/>
        </Grid.RowDefinitions>
        <Label Content="Name" HorizontalAlignment="Left" Margin="50,91,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="50,152,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="txtCustName" HorizontalAlignment="Left" Height="23" Margin="181,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBox x:Name="txtCustAddress" HorizontalAlignment="Left" Height="23" Margin="181,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.272,-0.352" Grid.Row="1"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="50,240.209,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click" Grid.Row="1"/>

    </Grid>
</Window>
