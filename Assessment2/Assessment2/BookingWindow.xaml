<Window x:Class="Assessment2.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookingWindow" Height="550" Width="400">
    <Grid>
        <Label x:Name="lblCustName" Content="Name" HorizontalAlignment="Left" Margin="168,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Customer details" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dtpArrival" HorizontalAlignment="Left" Margin="186,143,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dtpDeparture" HorizontalAlignment="Left" Margin="186,201,0,0" VerticalAlignment="Top"/>
        <Label Content="Arrival Date" HorizontalAlignment="Left" Margin="38,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.104,-0.516"/>
        <Label Content="Departure date" HorizontalAlignment="Left" Margin="38,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.65,-0.394"/>
        <Separator HorizontalAlignment="Left" Height="29" Margin="0,114,0,0" VerticalAlignment="Top" Width="392"/>
        <CheckBox x:Name="ckbBreakfast" Content="Breakfast" HorizontalAlignment="Left" Margin="38,256,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbDinner" Content="Dinner" HorizontalAlignment="Left" Margin="164,256,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbCar" Content="Car Hire" HorizontalAlignment="Left" Margin="286,256,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.245,-0.22"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="38,311,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="63,363,0,0" VerticalAlignment="Top" Width="75" Click="btnEdit_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="63,399,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>
        <ListBox x:Name="lstGuest" HorizontalAlignment="Left" Height="93" Margin="164,326,0,0" VerticalAlignment="Top" Width="170"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="111,454,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lblCustAddress" Content="Address" HorizontalAlignment="Left" Margin="168,71,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCustRef" Content="CustomerRef" HorizontalAlignment="Left" Margin="168,97,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="382"/>

    </Grid>
</Window>
