<Window x:Class="Assessment2.EditGuest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditGuest" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtEditName" HorizontalAlignment="Left" Height="23" Margin="149,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEditAge" HorizontalAlignment="Left" Height="23" Margin="149,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEditPp" HorizontalAlignment="Left" Height="23" Margin="149,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="31,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="31,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Passport Number" HorizontalAlignment="Left" Margin="31,163,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAmend" Content="Amend" HorizontalAlignment="Left" Margin="73,231,0,0" VerticalAlignment="Top" Width="75" Click="btnAmend_Click"/>

    </Grid>
</Window>
